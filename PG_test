##
#Ansible playbook for the PostgreSQL.
#
# This installs PostgreSQL on an Ubuntu system, creates a database called
# "pg_test" and a user called "iamuser" with password "Pkv02zb6l"
# with access to the "myapp" database.
#
---
- hosts: ubuntus
  become: yes
  gather_facts: no

  tasks:
  - name: ensure apt cache is up to date
    apt: update_cache=yes
  - name: ensure packages are installed
    apt: name={{item}}
    with_items:
        - postgresql
        - libpq-dev
        - python-psycopg2

- hosts: ubuntus
  become: yes
  become_user: postgres
  gather_facts: no

  vars:
    dbname: pg_test
    dbuser: iamuser
    dbpassword: Pkv02zb6l

  tasks:
  - name: ensure database is created
    postgresql_db: name={{dbname}}

  - name: ensure user has access to database
    postgresql_user: db={{dbname}} name={{dbuser}} password={{dbpassword}} priv=ALL

  - name: ensure user does not have unnecessary privilege
    postgresql_user: name={{dbuser}} role_attr_flags=NOSUPERUSER,NOCREATEDB

  - name: ensure no other user can access the database
    postgresql_privs: db={{dbname}} role=PUBLIC type=database priv=ALL state=absent

  - name: Enable service postgresql
    ansible.builtin.systemd:
      name: postgresql
      enabled: yes
